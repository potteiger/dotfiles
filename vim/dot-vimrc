" default filetype is text
"
set filetype=text

" line numbers
"
set number

" auto indent / smart indent
"
set autoindent
set smartindent

" text width and color column
"
set textwidth=80
set colorcolumn=81

" line and column highlighting
"
set cursorcolumn
set cursorline

" coordinates
"
set ruler

" tabs -> spaces
"
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

" backspacing
"
set backspace=indent,eol,start

